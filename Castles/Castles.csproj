  <ItemGroup>
    <None Update="Resources\WorldColor.frag.spv">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="Resources\WorldColor.vert.spv">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="Resources\WorldTexture.frag.spv">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="Resources\WorldTexture.vert.spv">
