<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="GameMap.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Content\mapcity.json" />
    <None Remove="Content\mapdemo2.json" />
    <None Remove="Content\mod.json" />
    <None Remove="Content\settings.json" />
    <None Remove="Content\shader\WorldColor.frag.spv" />
    <None Remove="Content\shader\WorldColor.vert.spv" />
    <None Remove="Content\shader\WorldTexture.frag.spv" />
